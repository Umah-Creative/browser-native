{
  "name": "browser-native",
  "private": true,
  "description": "A modular monorepo containing a core browser-native API toolkit and framework-agnostic wrappers. Fully typed, tree-shakeable, and optimized for modern web applications.",
  "author": "Ummah Creative <richie@umahcreative.dev>",
  "license": "MIT",
  "homepage": "https://github.com/umah-creative/browser-native#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/umah-creative/browser-native.git"
  },
  "bugs": {
    "url": "https://github.com/umah-creative/browser-native/issues"
  },
  "keywords": [
    "browser",
    "typescript",
    "api",
    "monorepo",
    "react",
    "hooks",
    "clipboard",
    "geolocation",
    "notifications",
    "web-apis"
